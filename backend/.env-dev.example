# BrainDrive Development Environment Configuration
# Copy this to .env-dev and fill in your values

# Security 
SECRET_KEY=your-secret-key-here-change-in-production

# Service Authentication Tokens
# Generate new tokens with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# WARNING: Keep these secret! These tokens authenticate internal services.
PLUGIN_RUNTIME_TOKEN=generate-a-secure-token-here
JOB_WORKER_TOKEN=generate-a-secure-token-here
PLUGIN_LIFECYCLE_TOKEN=generate-a-secure-token-here

# Rate Limiting 
MAX_REQUEST_SIZE=5242880  # 5MB in bytes

# Database
DATABASE_URL=sqlite:///braindrive.db

# CORS (set to your frontend URL in production)
# Leave empty for development (wildcard allowed)
CORS_ORIGINS=

# Debug
DEBUG=true

